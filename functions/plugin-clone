# vi: ft=zsh
emulate -L zsh; setopt local_options extended_glob no_monitor
local repo plugdir initfile
local -a initfiles
for repo in $@; do
  plugdir=$ZSH_CUSTOM/.external/${repo:h:t}/${repo:t}
  initfile=$plugdir/${repo:t}.plugin.zsh
  if [[ ! -d $plugdir ]]; then
    echo "Cloning $repo..."
    (
      git clone --quiet --depth 1 --recursive --shallow-submodules https://github.com/$repo $plugdir
      if [[ ! -e $initfile ]]; then
        initfiles=($plugdir/*.plugin.{z,}sh(N) $plugdir/*.{z,}sh{-theme,}(N))
        [[ $#initfiles -gt 0 ]] && ln -sf $initfiles[1] $initfile
      fi
    ) &
  fi
done
wait
